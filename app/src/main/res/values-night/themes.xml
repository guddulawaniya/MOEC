<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MOEC" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimaryVariant">@color/primarycolor</item>
        <item name="colorPrimary">@color/secondarycolor</item>
        <item name="colorOnPrimary">@color/background_blue_shadew</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/background_blue_shadew</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/primarycolor</item>  // you can change the color of the yearPiker dialog
        <item name="android:textColorPrimary">@color/background_blue_shadew</item> // you can change the color of the yearPiker dialog
    </style>

    <style name="DropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.App" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primarycolor</item>
        <item name="colorOnPrimary">@color/background_blue_shadew</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:strokeColor">@color/primarycolor</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/buttonbgcolor</item>
    </style>

    <style name="Widget.App.Radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/buttonbgcolor</item>
    </style>

    <style name="SCBSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="buttonTint">@color/buttonbgcolor</item>
    </style>

    <style name="Widget.MaterialComponents" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@drawable/selected_chip</item>
        <item name="rippleColor">@color/hint_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chips_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="android:gravity">center</item>


    </style>
</resources>