<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Refine_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbarlayout" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/primarycolor"
                android:paddingStart="20dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="Fliter data in Recommended Programs,"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:elevation="8dp"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fliter By"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Country"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="State"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Institution Type"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:singleLine="true">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="All"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EAEAEA"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp"
                                app:chipStrokeColor="@color/iconcolor"
                                app:chipSurfaceColor="@color/white" />

                            <com.google.android.material.chip.Chip

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="School"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EAEAEA"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="University"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EAEAEA"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="College"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EAEAEA"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </com.google.android.material.chip.ChipGroup>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Institute"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Is Post graduate work permit available?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="All"
                        android:textColor="@color/text_color"
                        app:chipBackgroundColor="#EAEAEA"
                        app:chipCornerRadius="50dp"
                        app:chipEndPadding="16dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="16dp" />

                    <com.google.android.material.chip.Chip

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Yes"
                        android:textColor="@color/text_color"
                        app:chipBackgroundColor="#EAEAEA"
                        app:chipCornerRadius="50dp"
                        app:chipEndPadding="16dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="16dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="No"

                        android:textColor="@color/text_color"
                        app:chipBackgroundColor="#EAEAEA"
                        app:chipCornerRadius="50dp"
                        app:chipEndPadding="16dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="16dp" />

                </com.google.android.material.chip.ChipGroup>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Study Level"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Program Type"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Intake"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Duration"
                    android:textColor="@color/black"
                    android:textSize="16sp" />



                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    android:scrollbars="horizontal"
                    android:layout_marginTop="10dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="center"
                                android:text="All"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="Less than 2 Years"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="More than 4 Years"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="4 Years"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="3 Years"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="2 Years"
                                android:textColor="@color/text_color"
                                app:chipBackgroundColor="#EFEFEF"
                                app:chipCornerRadius="50dp"
                                app:chipEndPadding="16dp"
                                app:chipMinHeight="40dp"
                                app:chipStartPadding="16dp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </com.google.android.material.chip.ChipGroup>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="English Test Type"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/newtextbg"
                    android:drawableEnd="@drawable/arrow_down"
                    android:drawableTint="@color/primarycolor"
                    android:hint="All"
                    android:inputType="none"
                    android:padding="14dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tuition Fee"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tuitionfee_rang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:text="400 - 199341"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <com.google.android.material.slider.RangeSlider

                    android:id="@+id/tuition_rangslider"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:values="@array/initial_slider_values"
                    android:valueFrom="0.0"

                    android:valueTo="100.0" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Application Fee"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/appliation_rang_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:text="0 - 1000"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <com.google.android.material.slider.RangeSlider

                    android:id="@+id/appliation_rang_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:values="@array/initial_slider_values"
                    android:valueFrom="0.0"
                    android:valueTo="100.0" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#FB7861"
                    android:elevation="9dp"
                    android:text="0 Record Found"
                    android:textColor="@color/white" />
                <Button


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="9dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primarycolor"
                    android:layout_marginBottom="20dp"
                    android:text="Show Progrrams" />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>