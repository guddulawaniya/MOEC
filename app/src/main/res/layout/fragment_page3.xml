<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/page3"
    android:visibility="visible"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:text="Education Qualifications"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/required_icon"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Select your highest Qualification"
                android:textColor="@color/hint_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"

                    >


                    <RadioGroup
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp">

                        <RadioButton
                            android:id="@+id/radioButtonhigh"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="10th"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/highpercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/highpercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <RadioButton
                            android:id="@+id/radioButtoninter"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="12th"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/interpercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/interpercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <RadioButton
                            android:id="@+id/radioButtonunder"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="Undergraduate"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/undergraduatepercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/undergraduatepercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp"
                                android:maxLength="5" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <RadioButton
                            android:id="@+id/radioButtongraduate"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="Graduate"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/graduatepercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/graduatepercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <RadioButton
                            android:id="@+id/radioButtonpost"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="Postgraduate Certificate/Diploma"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/postpercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/postpercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <RadioButton
                            android:id="@+id/radioButtonmaster"
                            style="@style/Widget.App.Radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:text="Master Degree"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/masterpercentlayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="@color/primarycolor"
                            app:hintEnabled="false">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/masterpercent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:hint="Enter Percentage (%)"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:padding="10dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RadioGroup>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>