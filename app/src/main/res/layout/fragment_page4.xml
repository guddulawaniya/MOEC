<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/page4"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginAfter_Steps.Page4">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="I want to study in"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Select one of the following as per your qualification"
            android:textColor="@color/hint_color"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">


            <RadioButton
                android:id="@+id/radioButtoninterpage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.App.Radio"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="12th"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider" />


            <RadioButton
                android:id="@+id/radioButtongraduatepage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                style="@style/Widget.App.Radio"
                android:paddingStart="15dp"
                android:text="Graduate"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/radioButtonpostpage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                style="@style/Widget.App.Radio"
                android:text="Postgraduate Certificate/Diploma"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/radioButtonmasterpage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                style="@style/Widget.App.Radio"
                android:paddingStart="15dp"
                android:text="Master Degree"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>