<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="Fragments.Edit_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/updatebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/sideemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/closefragmentbutton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/close_icon"
                app:tint="@color/black" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/submitbutton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include6">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:fontFamily="@font/poppins"
                                            android:text="@string/first_name"
                                            android:textColor="@color/text_color"
                                            android:textSize="14sp" />

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/firstnamelayout"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColorHint="@color/hint_color"
                                            app:boxCornerRadiusBottomEnd="8dp"
                                            app:boxCornerRadiusBottomStart="8dp"
                                            app:boxCornerRadiusTopEnd="8dp"
                                            app:boxCornerRadiusTopStart="8dp"
                                            app:boxStrokeColor="@color/primarycolor"
                                            app:boxStrokeErrorColor="@color/error_color"
                                            app:errorIconTint="@color/error_color"
                                            app:helperTextTextColor="@color/error_color"
                                            app:hintEnabled="false">


                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/firstname"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/poppins"
                                                android:hint="@string/first_name"
                                                android:padding="10dp"
                                                android:singleLine="true"
                                                android:textColor="@color/text_color"
                                                android:textColorHint="@color/iconcolor"
                                                android:textSize="14sp" />
                                        </com.google.android.material.textfield.TextInputLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:fontFamily="@font/poppins"
                                            android:text="@string/last_name"
                                            android:textColor="@color/text_color"
                                            android:textSize="14sp" />

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/lastnamelayout"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:textColorHint="@color/hint_color"
                                            app:boxCornerRadiusBottomEnd="8dp"
                                            app:boxCornerRadiusBottomStart="8dp"
                                            app:boxCornerRadiusTopEnd="8dp"
                                            app:boxCornerRadiusTopStart="8dp"
                                            app:boxStrokeColor="@color/primarycolor"
                                            app:boxStrokeErrorColor="@color/error_color"
                                            app:errorIconTint="@color/error_color"
                                            app:helperTextTextColor="@color/error_color"
                                            app:hintEnabled="false"
                                            app:hintTextColor="@color/primarycolor"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHorizontal_bias="0.5"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/textView7"
                                            app:prefixTextColor="@color/primarycolor">


                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/lastname"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/poppins"
                                                android:hint="@string/last_name"
                                                android:padding="10dp"
                                                android:singleLine="true"
                                                android:textColor="@color/text_color"
                                                android:textColorHint="@color/iconcolor"
                                                android:textSize="14sp" />
                                        </com.google.android.material.textfield.TextInputLayout>

                                    </LinearLayout>


                                </LinearLayout>

<!--

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="top"
                                    android:text="Mobile No"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/mobilenumberlayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/hint_color"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:boxStrokeErrorColor="@color/error_color"
                                    app:errorIconTint="@color/error_color"
                                    app:helperTextTextColor="@color/error_color"
                                    app:hintEnabled="false"
                                    tools:ignore="MissingConstraints">

                                    &lt;!&ndash;this is the actual edit text which takes the input&ndash;&gt;
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/mobilenumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="+91-xxxxxxxx"
                                        android:inputType="numberDecimal"
                                        android:padding="10dp"
                                        android:textColor="@color/text_color"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    </LinearLayout>

                                </com.google.android.material.textfield.TextInputLayout>
-->


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:text="@string/date_of_birth"
                                            android:textColor="@color/text_color"
                                            android:textSize="14sp" />


                                        <!--this is the actual edit text which takes the input-->
                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/dateofbirth"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:background="@drawable/newtextbg"
                                            android:fontFamily="@font/poppins"
                                            android:gravity="center_vertical"
                                            android:hint="DD-MM-YYYY"
                                            android:inputType="date"
                                            android:padding="12dp"
                                            android:textColor="@color/text_color"
                                            android:textColorHint="@color/iconcolor"
                                            android:textSize="14sp" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:text="Gender"
                                            android:textColor="@color/text_color"
                                            android:textSize="14sp" />


                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/genderlayout"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:boxBackgroundColor="@color/white"
                                            app:boxCornerRadiusBottomEnd="8dp"
                                            app:boxCornerRadiusBottomStart="8dp"
                                            app:boxCornerRadiusTopEnd="8dp"
                                            app:boxCornerRadiusTopStart="8dp"
                                            app:boxStrokeColor="@color/primarycolor"
                                            app:endIconDrawable="@drawable/arrow_down"
                                            app:endIconTint="@color/hint_color"
                                            app:hintEnabled="false">


                                            <AutoCompleteTextView
                                                android:id="@+id/gender"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppins"
                                                android:hint="Select"
                                                android:inputType="none"
                                                android:padding="10dp"
                                                android:textColor="@color/black"
                                                android:textColorHint="@color/iconcolor"
                                                android:textSize="14sp" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </LinearLayout>


                                </LinearLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="20dp"

                                    android:fontFamily="@font/poppins"
                                    android:text="Pin Code"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/pincodelayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/hint_color"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:boxStrokeErrorColor="@color/error_color"
                                    app:endIconMode="custom"
                                    app:endIconTint="#4CAF50"
                                    app:errorIconTint="@color/error_color"
                                    app:helperTextTextColor="@color/error_color"
                                    app:hintEnabled="false"
                                    tools:ignore="MissingConstraints">

                                    <!--this is the actual edit text which takes the input-->
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/pincode"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="Enter Pin Code"
                                        android:inputType="numberDecimal"
                                        android:maxLength="6"
                                        android:padding="10dp"
                                        android:textColor="@color/text_color"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />


                                    <ProgressBar
                                        android:id="@+id/pincodeprogressbar"
                                        style="?android:attr/progressBarStyle"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="-35dp"
                                        android:layout_marginEnd="16dp"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                    </LinearLayout>

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="Country"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/countrylayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/hint_color"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:boxStrokeErrorColor="@color/error_color"
                                    app:endIconMode="custom"
                                    app:endIconTint="#4CAF50"
                                    app:errorIconTint="@color/error_color"
                                    app:helperTextTextColor="@color/error_color"
                                    app:hintEnabled="false"
                                    tools:ignore="MissingConstraints">

                                    <!--this is the actual edit text which takes the input-->
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/country"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="@string/country"
                                        android:inputType="numberDecimal"
                                        android:padding="10dp"
                                        android:textColor="@color/text_color"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="State"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/statelayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/hint_color"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:boxStrokeErrorColor="@color/error_color"
                                    app:endIconMode="custom"
                                    app:endIconTint="#4CAF50"
                                    app:errorIconTint="@color/error_color"
                                    app:helperTextTextColor="@color/error_color"
                                    app:hintEnabled="false"
                                    tools:ignore="MissingConstraints">

                                    <!--this is the actual edit text which takes the input-->
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/state"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="@string/state"
                                        android:inputType="numberDecimal"
                                        android:padding="10dp"
                                        android:textColor="@color/text_color"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="City"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/citylayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColorHint="@color/hint_color"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:boxStrokeErrorColor="@color/error_color"
                                    app:endIconMode="custom"
                                    app:endIconTint="#4CAF50"
                                    app:errorIconTint="@color/error_color"
                                    app:helperTextTextColor="@color/error_color"
                                    app:hintEnabled="false"
                                    tools:ignore="MissingConstraints">

                                    <!--this is the actual edit text which takes the input-->
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/city"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:hint="@string/city"
                                        android:inputType="numberDecimal"
                                        android:padding="10dp"
                                        android:textColor="@color/text_color"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />

                                </com.google.android.material.textfield.TextInputLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="Marital Status"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxCornerRadiusBottomEnd="8dp"
                                    app:boxCornerRadiusBottomStart="8dp"
                                    android:layout_marginBottom="40dp"
                                    app:boxCornerRadiusTopEnd="8dp"
                                    app:boxCornerRadiusTopStart="8dp"
                                    app:boxStrokeColor="@color/primarycolor"
                                    app:endIconDrawable="@drawable/arrow_down"
                                    app:endIconTint="@color/hint_color"
                                    app:hintEnabled="false">

                                    <AutoCompleteTextView
                                        android:id="@+id/maritalstatus"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:dropDownSelector="@color/background_blue_shadew"
                                        android:fontFamily="@font/poppins"
                                        android:hint="Choose.."
                                        android:inputType="textAutoComplete"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/iconcolor"
                                        android:textSize="14sp" />

                                </com.google.android.material.textfield.TextInputLayout>



                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/primarycolor"
        android:fontFamily="@font/oswald"
        android:gravity="center"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>