<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".program_preference_Activity">


    <include
        android:id="@+id/include"
        layout="@layout/toolbarlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Want to study in"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selectcountry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/newtextbg"
                android:drawableEnd="@drawable/arrow_right"
                android:drawableTint="@color/hint_color"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="Select"
                android:inputType="none"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Area of interest"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selectEducation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/newtextbg"
                android:drawableEnd="@drawable/arrow_right"
                android:drawableTint="@color/hint_color"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="Select"
                android:inputType="none"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Education Qualification"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selectCourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/newtextbg"
                android:drawableEnd="@drawable/arrow_right"
                android:drawableTint="@color/hint_color"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="Select"
                android:inputType="none"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="English Test Score"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/selectTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/newtextbg"
                android:drawableEnd="@drawable/arrow_right"
                android:drawableTint="@color/hint_color"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:hint="Select"
                android:inputType="none"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>